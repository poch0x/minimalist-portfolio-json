---
import Section from "@/components/Section.astro";

import { skills } from "@cv";

---

<Section title="Skills">
   <ul>
      {
         skills.map(({ name, level }) => (
            <li>
               <strong>{name}</strong>
            </li>
         ))
      }
   </ul>
</Section>

<style>
   ul {
      display: inline-flex;
      flex-wrap: wrap;
      gap: 8px;
   }

   li {
      border-radius: 6px;
      background: #eee;
      color: black;
      font-size: .8em;
      font-weight: 500;
      padding: 0.2rem 0.6rem;
   }
</style>
